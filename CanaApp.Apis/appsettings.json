{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=CancApp;Trusted_Connection=True;Encrypt=False",
    "HangfireConnection": "Server=.;Database=CANCAppJobs;Trusted_Connection=True;Encrypt=False"
  },
  "AllowedOrgins": [
    "https://Canc-App.com"
  ],
  "Jwt": {
    "Key": "",
    "Issuer": "CANCAPP",
    "Audience": "CANCAPP Users",
    "ExpireTimeInMinutes": 30
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Hangfire": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "D:\\CANCAPP\\Logs\\log.txt",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "ApplicationName": "CANCAPP"
    }
  },
  "MailSettings": {
    "Mail": "roel.mann@ethereal.email",
    "DisplayName": "CANC App",
    "Password": "",
    "Host": "smtp.ethereal.email",
    "Port": 587
  },
  "HangfireSettings": {
    "UserName": "",
    "Password": ""
  }
}
